{
  "name": "worker-swr-plugin",
  "version": "0.0.0",
  "description": "This plugin is for controlling responses like SWR (stale-while-revalidate) in Cloudflare Workers.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ateam-dev/worker-swr-plugin"
  },
  "author": "Ateam Inc.",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}'",
    "lint": "eslint --max-warnings=0 src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}'",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "semantic-release": "semantic-release",
    "prepack": "yarn build"
  },
  "dependencies": {},
  "devDependencies": {
    "@cloudflare/workers-types": "^3.13.0",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/jest": "^28.1.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typescript": "^3.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-environment-miniflare": "^2.5.1",
    "jest-mock-server": "^0.0.5",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3",
    "ts-jest": "^28.0.5",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "wait-for-expect": "^3.0.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "typescript",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 80
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "verbose": true,
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json",
        "useESM": true
      }
    },
    "testMatch": [
      "**/__tests__/**/*.{test,spec}.ts"
    ],
    "testEnvironment": "miniflare"
  },
  "release": {
    "branches": [
      "main",
      { "name": "pre/rc", "channel": "pre/rc", "prerelease": "rc" },
      { "name": "beta", "channel": "beta", "prerelease": true }
    ]
  }
}
